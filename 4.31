#include <stdio.h>

int main()
{

	// Homework 4.31, 6/19/14, Matthew Walker

	int i, a, k, b, space;

puts("Enter a number of rows for your diamond: ");
scanf_s("%d", &a);

a = (a/2)+1;
space = a - 1;


for (k = 1; k <= a; k++) {
	for (b = 1; b <= space; b++)
		printf(" ");
	space--;
	for (b = 1; b <= 2*k-1; b++)
		printf("*");
	printf("\n");
}

space = 1;

for (k = 1; k <= a - 1; k++) {
	
	for (b = 1; b <= space; b++)
		printf(" ");
	space++;

	for (b = 1; b <= 2*(a-k)-1; b++)
		printf("*");

	printf("\n");
}


}
